{
    "name": "transducist",
    "version": "0.3.1",
    "description": "Ergonomic JavaScript/TypeScript transducers for beginners and experts.",
    "main": "dist/index.js",
    "types": "dist/index",
    "files": [
        "dist/"
    ],
    "repository": {
        "type": "git",
        "url": "git://github.com/dphilipson/transducist.git"
    },
    "keywords": [
        "transducers",
        "typescript",
        "functional",
        "iterators",
        "lazy",
        "chain"
    ],
    "homepage": "https://github.com/dphilipson/transducist",
    "bugs": {
        "url": "https://github.com/dphilipson/transducist/issues",
        "email": "david.philipson@gmail.com"
    },
    "author": "David Philipson <david.philipson@gmail.com> (http://dphil.me)",
    "license": "MIT",
    "scripts": {
        "build": "yarn run clean && tsc -p tsconfig.build.json",
        "clean": "rm -rf dist/*",
        "format": "prettier --write",
        "generate-toc": "markdown-toc -i",
        "jest": "jest",
        "jest-watch": "yarn run jest --watch",
        "lint": "tslint --project .",
        "lint-fix": "yarn run lint --fix",
        "precommit": "lint-staged",
        "prepare": "yarn run build",
        "test": "yarn run lint && tsc && yarn run jest"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ]
    },
    "lint-staged": {
        "*.json": [
            "yarn run format",
            "git add"
        ],
        "*.{ts,tsx}": [
            "yarn run lint-fix",
            "yarn run format",
            "git add"
        ],
        "*.md": [
            "yarn run generate-toc",
            "git add"
        ]
    },
    "devDependencies": {
        "@types/jest": "^23.1.0",
        "husky": "^0.14.3",
        "jest": "^23.1.0",
        "lint-staged": "^7.2.0",
        "markdown-toc": "^1.2.0",
        "prettier": "^1.13.5",
        "ts-jest": "^22.4.6",
        "tslint": "^5.10.0",
        "tslint-config-prettier": "^1.13.0",
        "typescript": "^2.9.2"
    },
    "dependencies": {}
}
